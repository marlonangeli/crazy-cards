{
  "ConnectionStrings": {
    "CrazyCardsDb": "<secrets>"
  },
  "AzureStorage": {
    "ConnectionString": "<secrets>",
    "ContainerName": "cards"
  },
  "Keycloak": {
    "Realm": "crazycards",
    "AuthServerUrl": "http://keycloak:8080/",
    "SslRequired": "none",
    "Resource": "cc-api",
    "Credentials": {
      "Secret": "<secrets>"
    },
    "VerifyTokenAudience": false,
    "ConfidentialPort": 0
  },
  "Redis": {
    "Host": "redis",
    "Port": 6379,
    "Password": "<secrets>",
    "InstanceName": "crazycards"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "/Logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  }
}